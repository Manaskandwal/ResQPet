# ==========================================
# PawSaarthi Backend - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# Server
PORT=5000
NODE_ENV=development

# MongoDB Atlas
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/pawsaarthi?retryWrites=true&w=majority

# JWT
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRE=7d

# Cloudinary (free tier)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Razorpay (TEST MODE ONLY)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_test_secret

# Admin Seed
ADMIN_NAME=PawSaarthi Admin
ADMIN_EMAIL=admin@pawsaarthi.com
ADMIN_PASSWORD=Admin@123456

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173
